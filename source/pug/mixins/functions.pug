mixin pageHeader(tituloTema, srcImagen, pagina)
    .curso-portada

        .row.align-items-end

            .col-12.col-lg-6

                .curso-container

                    h3#curso-titulo-componente.curso-subtitulo.text-color-orange Manejo integrado de la desnutrición aguda en niño menor de cinco (5) años.
                    h1#curso-titulo-tema.curso-titulo Atención a la desnutrición aguda moderada y severa en niños y niñas de 0 a 59 meses de edad.  

                    .brand-line-primary

                    if pagina == 'main'

                        .keywords
                            span.badge.badge-pill.badge-brand-light.bg-brand-color-1.mr-2 Desnutrición aguda
                            span.badge.badge-pill.badge-brand-light.bg-brand-color-2.mr-2 Manejo ambulatorio
                            span.badge.badge-pill.badge-brand-light.mr-2 Alimentación complementaria


                        .barra-dots.mt-5
                            img.img-fluid(src='assets/images/header/icon_dots.svg', alt='alt')

                    else 
                        p.curso-descripcion En este componente formativo, se presenta lo que está definido para que los profesionales de la salud efectúen una adecuada identificación, tratamiento y seguimiento de los niños y niñas de 0 a 59 meses de edad que cursan con desnutrición aguda moderada o severa, de etiología primaria, entendida como carencia de alimentos, asociada o no con infecciones recurrentes

                        //p.curso-descripcion El aprendiz podrá identificar los elementos conceptuales relacionados con la atención integral de la primera infancia y nutrición materno infantil desde el sector salud. 
          
                    if pagina == 'home'
                        a.curso-btn-iniciar.btn.btn-light(href="main.html").mb-4
                            span Iniciar curso


            .col-12.col-lg-6.text-center
                .d-none.d-lg-block
                    img(src= srcImagen).curso-imagen


mixin referenciaItem(referencia, enlace, tituloenlace="")
    p= referencia
        if tituloenlace != ""
            a(href= enlace, target="_blank").ml-2= tituloenlace
        else if enlace != ""
            a(href= enlace, target="_blank").ml-2= enlace
    hr



mixin navTemaItem(numero, titulo, ruta)
    li.list-group-item.nav-tema-item
        .row.align-items-center
            if numero == 'play'
                .col-auto
                    .avatar.avatar-sm
                        span.nav-tema-item__icon.avatar-title.font-size-lg.bg-secondary-soft.rounded-circle.text-primary.font-weight-bold 
                            i.fa.fa-play
            else if numero == 'question'
                .col-auto
                    .avatar.avatar-sm
                        span.nav-tema-item__icon.avatar-title.font-size-lg.bg-secondary-soft.rounded-circle.text-primary.font-weight-bold 
                            i.fa.fa-question
            else if numero == 'text'
                .col-auto
                    .avatar.avatar-sm
                        span.nav-tema-item__icon.avatar-title.font-size-lg.bg-secondary-soft.rounded-circle.text-primary.font-weight-bold 
                            i.fa.fa-file-text-o
            else if numero == 'glosario'
                .col-auto
                    .avatar.avatar-sm
                        span.nav-tema-item__icon.avatar-title.font-size-lg.bg-secondary-soft.rounded-circle.text-primary.font-weight-bold 
                            i.fa.fa-sort-alpha-asc
            else if numero == 'complementario'
                .col-auto
                    .avatar.avatar-sm
                        span.nav-tema-item__icon.avatar-title.font-size-lg.bg-secondary-soft.rounded-circle.text-primary.font-weight-bold 
                            i.fa.fa-folder-open
            else if numero == 'referencias'
                .col-auto
                    .avatar.avatar-sm
                        span.nav-tema-item__icon.avatar-title.font-size-lg.bg-secondary-soft.rounded-circle.text-primary.font-weight-bold 
                            i.fa.fa-book
            else
                .col-auto
                    .avatar.avatar-sm
                        span.nav-tema-item__icon.avatar-title.font-size-lg.bg-secondary-soft.rounded-circle.text-primary.font-weight-bold= numero

            .col.ml-n2
                span.nav-tema-item__titulo 
                    a(href= ruta)= titulo
            .col-auto                                            
                a(href= ruta).btn.btn-light.nav-tema-item__btn
                    | Ver más
    
    
